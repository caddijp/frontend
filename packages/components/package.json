{
  "name": "@caddijp/components",
  "version": "0.4.7",
  "description": "CADDi ui components built with React.",
  "license": "MIT",
  "repository": "git@github.com:caddijp/frontend.git",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "scripts": {
    "build": "run-s clean build:*",
    "build-storybook": "build-storybook -c .storybook",
    "build:esm": "tsc -p tsconfig.esm.build.json",
    "build:lib": "tsc -p tsconfig.build.json",
    "clean": "rimraf lib esm coverage",
    "prepublishOnly": "yarn build",
    "start-storybook": "start-storybook -c .storybook",
    "test": "jest"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0",
    "styled-components": "^5.1.1"
  },
  "dependencies": {
    "@ant-design/icons": "^4.2.2",
    "antd": "^4.6.2",
    "react-modal": "^3.11.2"
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "6.5.13",
    "@storybook/builder-webpack5": "6.5.13",
    "@storybook/manager-webpack5": "6.5.13",
    "@storybook/react": "6.5.13",
    "@types/react": "18.0.10",
    "@types/react-dom": "18.0.5",
    "@types/react-modal": "3.13.1",
    "@types/styled-components": "5.1.25",
    "identity-obj-proxy": "3.0.0",
    "jest-styled-components": "7.0.8",
    "style-loader": "3.3.1"
  },
  "types": "lib/index.d.ts",
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "jest-styled-components"
    ],
    "collectCoverage": true,
    "moduleNameMapper": {
      "\\.(scss|css|less|svg)$": "identity-obj-proxy"
    },
    "testEnvironment": "jsdom"
  }
}
