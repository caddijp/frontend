{
  "name": "@caddijp/frontend",
  "private": true,
  "license": "MIT",
  "repository": "ssh://git@github.com/caddijp/frontend.git",
  "author": "CADDi Co.,Ltd",
  "engines": {
    "npm": "^7.0.0"
  },
  "scripts": {
    "build": "lerna run build --include-dependencies",
    "build-storybook": "lerna run build-storybook --scope @caddijp/components",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "run-p -l lint:*",
    "lint:es": "eslint . --ext=ts,tsx",
    "lint:pkg": "lerna run lint --parallel",
    "lint:prettier": "prettier --check \"{packages,apps}/**/*.{js,ts,tsx}\"",
    "lint:style": "stylelint '**/*.ts{,x}' -s css-in-js",
    "prepare": "husky install",
    "prepublishOnly": "npm rum lint",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://registry.npmjs.org/\"'",
    "start-storybook": "lerna run start-storybook --scope @caddijp/components",
    "test": "lerna run test --parallel"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@types/jest": "26.0.21",
    "can-npm-publish": "1.3.3",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "5.1.3",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "lerna-changelog": "1.0.1",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "prettier-plugin-organize-imports": "1.1.1",
    "prettier-plugin-package": "1.3.0",
    "stylelint-config-styled-components": "0.1.1",
    "typescript": "4.2.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.tsx": [
      "stylelint -s css-in-js --fix"
    ],
    "*.{js,jsx,json,yml,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
